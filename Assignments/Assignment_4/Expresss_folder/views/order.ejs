
<div class="orders-container">
  <h2>My Orders</h2>

  <div class="back-button" style="margin: 10px 20px;">
    <a href="/landingPage" class="btn" style="text-decoration: none; padding: 8px 15px; background-color: #333; color: white; border-radius: 5px;">‚Üê Back to Home</a>
  </div>

  <link rel="stylesheet" href="/Css/order.css">


  <% if (orders.length === 0) { %>
    <p>No orders placed yet.</p>
  <% } else { %>
    <table class="orders-table">
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Product</th>
          <th>Quantity</th>
          <th>Total Price</th>
          <th>Date</th>
        </tr>
      </thead>

      <tbody>
        <% orders.forEach(order => { %>
          <% order.items.forEach((item, index) => { %>
            <tr>
              <td>
                <% if (index === 0) { %>
                  <%= order._id %>
                <% } %>
              </td>
              <td><%= item.title %></td>
              <td><%= item.quantity %></td>
              <td>PKR <%= item.price * item.quantity %></td>
              <% if (index === 0) { %>
                <td rowspan="<%= order.items.length %>"><%= order.createdAt.toDateString() %></td>
              <% } %>
            </tr>
          <% }) %>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>
