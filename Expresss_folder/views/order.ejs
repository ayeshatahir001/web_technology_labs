<div class="orders-container">
  <h2>My Orders</h2>

  <div class="back-button" style="margin: 10px 20px;">
  <a href="/landingPage" class="btn" style="text-decoration: none; padding: 8px 15px; background-color: #333; color: white; border-radius: 5px;">‚Üê Back to Home</a>
</div>

  <% if (orders.length === 0) { %>
  <p>No orders placed yet.</p>
  <% } else { %>
  <table class="orders-table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Total Price</th>
        <th>Date</th>
      </tr>
    </thead>

    <tbody>
      <% orders.forEach(order => { %> <% order.items.forEach(item => { %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.quantity %></td>
        <td>PKR <%= item.price * item.quantity %></td>
        <td><%= order.createdAt.toDateString() %></td>
  
      </tr>
      <% }) %> <% }) %>
    </tbody>
  </table>
  <% } %>
</div>
